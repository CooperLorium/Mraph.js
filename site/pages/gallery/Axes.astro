<Example title="Axes">
    <script>
        import * as mp from "../../../src/mraph.js";

        const layer = new mp.Layer().appendTo(document.body);

        // Create an instance of Axes
        const axes = new mp.Axes({
            xRange: [-10, 10, 1], // You can set the length of every axis like this
        });

        // Draw function figures
        const figure0 = axes.drawFunction2D((x) => x);
        figure0.set("strokeColor", mp.COLORS.BLUE);
        figure0.update();
        const figure1 = axes.drawFunction2D((x) => x ** 2);
        figure1.set("strokeColor", mp.COLORS.COOPER_ORANGE);
        figure1.update();
        const figure2 = axes.drawFunction2D((x) => Math.sin(x));
        figure2.set("strokeColor", mp.COLORS.SEIYA_PINK);
        figure2.update();
        const figure3D = axes.drawFunction3D((x, y) => x);
        figure3D.material.color = mp.COLORS.GREEN_E.clone();
        figure3D.material.color[3] = 0.2;

        // Render
        layer.add(axes);
        layer.enableOrbitControl();
        layer.play();
    </script>
</Example>
