---
interface Props {
    title?: string;
    src?: string;
}

const { title = "", src = "" } = Astro.props;
---

<li>
    <a href={src}>{title}</a>
</li>

<style>
    li {
        height: 25px;
        min-width: 100px;
        background-color: rgba(10, 10, 15, 0.3);
        padding: 10px;
        margin: 3px;
        border: 1px solid rgba(220, 220, 255, 0.3);
        display: flex;
        align-items: center;
        transition: all 0.2s;
        border-radius: 3px;
    }

    li:hover {
        background-color: rgba(215, 215, 240, 0.7);
    }

    li:hover a {
        color: dodgerblue;
    }

    a {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        color: aliceblue;
        text-decoration: none;
        font-family: var(--font-family);
        font-size: 80%;
    }
</style>
