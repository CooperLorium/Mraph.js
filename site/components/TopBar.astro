---
import NavBar from "./NavBar.astro";

interface Props {
    title?: string;
}

const { title = "" } = Astro.props;

const examples = [
    "Basic Example",
    "Rubik's Cube",
    "Electric Field",
    "Magnetic Focus",
];
---

<div>
    <h1>{title}</h1>
    <NavBar list={examples} focus={title} />
</div>

<style>
    div {
        width: 100%;
        height: 8%;
        position: fixed;
        background-color: rgba(20, 20, 25, 1);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    div h1 {
        color: aliceblue;
        font-family: Helvetica;
        font-size: 120%;
    }
</style>
